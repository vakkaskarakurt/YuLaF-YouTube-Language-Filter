{
  "manifest_version": 3,
  "name": "YuLaF - YouTube Language Filter",
  "version": "1.0.4",
  "description": "Filter YouTube content by language - supports 61 languages",

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "permissions": [
    "storage",
    "activeTab"
  ],

  "host_permissions": [
    "*://*.youtube.com/*",
    "*://formspree.io/*"
  ],

  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": [
        "src/utils/config.js",
        "src/services/language-detector.js",
        "src/services/language-service.js",
        "src/services/dom-service.js",
        "src/services/filter-service.js",
        "src/js/content.js"
      ],
      "css": ["src/css/styles.css"],
      "run_at": "document_idle"
    }
  ],

  "background": {
    "service_worker": "src/js/background.js"
  },

  "action": {
    "default_popup": "src/html/popup.html",
    "default_title": "YuLaF - YouTube Language Filter",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },

  "web_accessible_resources": [
    {
      "resources": [
        "src/html/welcome.html",
        "src/css/welcome.css", 
        "src/js/welcome.js",
        "src/assets/team/vakkas.jpeg",
        "src/assets/team/emrah.jpeg",
        "icons/icon16.png",
        "icons/icon48.png",
        "icons/icon128.png"      ],
      "matches": ["<all_urls>"]
    }
  ]
}